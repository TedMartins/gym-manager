{% extends "layout.njk" %}

{% block content %}

<div class="card">
    <section 
    class="avatar" 
    style="background: url({{ instructor.avatar_url }}) no-repeat center center / cover">

    </section>
    <section class="details">

        <h3>Details</h3>

        <div class="item">
            <div>Instructor</div>
            <div>{{ instructor.name }}</div>
        </div>

        <div class="item">
            <div>Age</div>
            <div>{{ instructor.age }}</div>
        </div>

        <div class="item">
            <div>Gender</div>
            <div>{{ "Male" if instructor.gender == "M" else "Female"}}</div>
        </div>

        <div class="item">
            <div>Specialities</div> 
            <div>
                {% for services in instructor.services %}
                <span>{{ services }}</span>
                {% endfor %}
            </div>
        </div>

        <div class="item">
            <div>Since</div>
            <div>{{ instructor.created_at }}</div>
        </div>

        <a href="/instructors/{{ instructor.id }}/edit" class="button">Edit</a>

    </section>
</div>

{% endblock content %}